<h1>Records</h1>

<% unless @records.empty? %>
<div id="records">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>IPv4</th>
        <th>Last seen</th>
        <th>Last change</th>
        <th class="empty"></th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |record| %>
      <tr>
        <td><%= record.name %></td>
        <td><%= record.ip %></td>
        <td><%= nice_time(record.updated_at) %></td>
        <td><%= nice_time(record.changed_at) %></td>
        <td><%= link_to "Show", record_path(record) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% end %>
<%= link_to "New record", new_record_path %>
